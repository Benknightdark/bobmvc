@{
    ViewBag.Title = "查詢全部書局資料";
    Layout = "~/Views/_template.cshtml";
}
@model System.Data.DataTable
@using System.Data
    <div class="table-responsive" style="margin-top:15%">
        <table class="table">
            <thead>
                <tr class="danger">
                    <th>#</th>
                    <th>名稱</th>
                    <th>居住地</th>
                    <th>排名</th>
                    <th>刪除</th>
                    <th>更新</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td class="active">@row["no"].ToString()</td>
                            <td class="success">@row["name"].ToString()</td>
                            <td class="warning">@row["city"].ToString()</td>
                            <td class="info">@row["rank"].ToString()</td>
                            <td class="success"><a href="/BookStoreSelect/Delete_page/@row["no"].ToString()" onclick="return check()">刪除</a></td>
                            <td class="success"><a href="/BookStoreSelect/Edit/@row["no"].ToString()">更新</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <span class="label label-warning"><a href="/BookStoreSelect/Index">回上一頁 </a> </span>
    </div>



    <script>
        function check() {
            return confirm("Delete?");
        }
    </script>


